apiVersion: maistra.io/v1
kind: ServiceMeshControlPlane
metadata:
  name: {{ control_plane_name }}
spec:
  version: v1.1
  istio:
    gateways:
      istio-egressgateway:
        enabled: false
      istio-ingressgateway:
        autoscaleEnabled: false
        enabled: true
        ior_enabled: false
    global:
      controlPlaneSecurityEnabled: true
      disablePolicyChecks: false
      mtls:
        enabled: true
      proxy:
        resources:
          limits:
            cpu: 500m
            memory: 128Mi
          requests:
            cpu: 100m
            memory: 128Mi
    grafana:
      enabled: true
    kiali:
      enabled: true
    mixer:
      policy:
        autoscaleEnabled: false
      telemetry:
        autoscaleEnabled: false
        resources:
          limits:
            cpu: 500m
            memory: 4G
          requests:
            cpu: 100m
            memory: 1G
    pilot:
      autoscaleEnabled: false
      traceSampling: 100
    tracing:
      enabled: true
      jaeger:
        template: all-in-one
